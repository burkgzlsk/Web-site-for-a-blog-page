@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="row mb-4">
	<div class="col">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>

<div class="row mb-4">
	<div class="col">
		<p class="text-danger font-monospace">
			İlgili Kullanıcıyı silmek istediğinize emin misiniz ? <br />
			<small>Bu işlem geriye alınamaz ve Kullanıcıya ait yazılarında silinmesini gerektirir.</small>
		</p>
	</div>
</div>


<div class="row mb-4">
	<div class="col-4">
		<dl class="row">
			<dt class="col-4">Ad Soyad</dt>
			<dd class="col-8">@NameData.GetFullName()</dd>

			<dt class="col-4">Kullanıcı Adı</dt>
			<dd class="col-8">@TextData.GetSentence()</dd>

			<dt class="col-4">E-posta Adresi</dt>
			<dd class="col-8">@NetworkData.GetEmail()</dd>

			<dt class="col-4">Aktif</dt>
			<dd class="col-8">
				<i class="fa fa-@(BooleanData.GetBoolean()  ? "check text-success" : "times text-danger")"></i>
			</dd>

			<dt class="col-4">Yönetici</dt>
			<dd class="col-8">
				<i class="fa fa-@(BooleanData.GetBoolean() ? "check text-success" : "times text-danger")"></i>
			</dd>

			<dt class="col-4">Oluşturan</dt>
			<dd class="col-8">@NameData.GetFullName()</dd>

			<dt class="col-4">Oluşturma Tarihi</dt>
			<dd class="col-8">@DateTimeData.GetDatetime()</dd>

			<dt class="col-4">Güncelleyen</dt>
			<dd class="col-8">@NameData.GetFullName()</dd>

			<dt class="col-4">Güncelleme Tarihi</dt>
			<dd class="col-8">@DateTimeData.GetDatetime()</dd>
		</dl>
	</div>
</div>


<div class="row mb-4">
	<div class="col">
		<form method="post" asp-action="Delete">
			<button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Kullanıcı Sil</button>
			<a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left me-2"></i>Listeye Dön</a>
		</form>
	</div>
</div>