@{
	ViewData["Title"] = "Profil Düzenle";
}

<div class="row p-4 text-center">
	<div class="col">
		<h3 class="display-4 border-bottom">Kullanıcı Hesabı</h3>
	</div>
</div>


<div class="row p-4 ">
	<div class="col-3 text-center ">
		<img src="https://picsum.photos/128?random=1" class="rounded-circle img-thumbnall" />
		<div class="mt-4">
			<form method="post" enctype="multipart/form-data">
				<div>
					<input type="file" class="form-control" value="" />
					<small>Lütfen sadece jpg. veya png. formatında resim yükleyiniz.</small>
				</div>
				<div class="mt-3">
					<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-upload me-2"></i> Yükle</button>
				</div>
				
			</form>
		</div>
	</div>
	<div class="col-3 offset-md-2">
		<form>
			<div class="mb-3">
				<label for="fullname" class="form-label">Ad Soyad</label>
				<input type="text" class="form-control" id="fullname">
			</div>
			<div class="mb-3">
				<label for="user" class="form-label">Kullanıcı Adı</label>
				<input type="text" class="form-control" id="username">
				@*@<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>*@
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">E-posta Adresi</label>
				<input type="email" class="form-control" id="email">
			</div>
			<div class="mb-3">
				<label for="pass" class="form-label">Şifre</label>
				<input type="password" class="form-control" id="pass">
			</div>
			<div class="text-center">
				<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save me-2"></i>Kaydet</button>
			</div>
		</form>
	</div>
</div>
