@{
	ViewData["Title"] = "Profil Kaldır";
}

<div class="row p-4 text-center">
	<div class="col">
		<h3 class="display-4 border-bottom">Kullanıcı Hesabını Kaldır</h3>
	</div>
</div>


<div class="row p-4 ">
	<div class="col-3 text-center ">
		<img src="https://picsum.photos/128?random=1" class="rounded-circle img-thumbnall" />
	</div>
	<div class="col-5">
		<h3 class="display-4 mb-3">Burak Güzelışık</h3>
		<div class="mb-3">
			<div><b>Kullanıcı Adı</b></div>
			<div>burak güzelışık</div>
		</div>
		<div class="mb-3">
			<div><b>E-posta Adresi</b></div>
			<div>john@wick.com</div>
		</div>

		<div class="mb-3">
			<p class="text-danger $font-weight-bold">İlgili hesabınızı kaldırmak istediğinize emin misiniz ?(bu işlem geri alınamaz)</p>
			<form method="post" asp-action="DeleteProfile">
				<button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i> Hesabı Kaldır</button>
			</form>
		</div>
	</div>
</div>
