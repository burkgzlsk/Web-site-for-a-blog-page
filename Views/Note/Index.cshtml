@{
    ViewData["Title"] = "Yazılarım";
}

<div class="row mb-4">
	<div class="col">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>

<div class="row mb-4">
	<div class="col">
		<a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus me-2"></i></>Yazı ekle</a>
	</div>
</div>

<div class="row mb-4">
	<div class="col table-responsive">
		<table class="table table-hover table-striped table-sm small">
			<thead>
				<tr>
					<th>Kategori</th>
					<th >Başlık</th>
					<th class="text-center">Beğeni Adet</th>
					<th class="text-center">Yorum Adet</th>
					<th class="text-center">Taslak</th>
					<th>Oluşturan</th>
					<th>Oluşturma Tarihi</th>
					<th>Güncelleyen</th>
					<th>Güncelleme Tarihi</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < 10; i++)
				{
					<tr>
						<td>@NameData.GetCompanyName()</td>
						<td>@TextData.GetSentence()</td>
						<td class="text-center">
							<i class="fa fa-@(BooleanData.GetBoolean() ? "check text-success" : "times text-danger")"></i>
						</td>
						<td class="text-center">@NumberData.GetNumber(1,100)</td>
						<td class="text-center">@NumberData.GetNumber(1,100)</td>
						<td>@NameData.GetFullName()</td>
						<td>@DateTimeData.GetDatetime()</td>
						<td>@NameData.GetFullName()</td>
						<td>@DateTimeData.GetDatetime()</td>
						<td class="text-center">
							<button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modal_notecomments"><i class="fa fa-comments"></i></button>
							<a class="btn btn-warning btn-sm" asp-action="Edit"><i class="fa fa-edit"></i> </a>
							<a class="btn btn-info btn-sm" asp-action="Details"><i class="fa fa-search"></i> </a>
							<a class="btn btn-danger btn-sm" asp-action="Delete"><i class="fa fa-trash"></i> </a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="modal" id="modal_notecomments" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5">Yorumlar</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="media">
					<img src="https://picsum.photos/id/5/64/64" class="me-3" alt="...">
					<div class="media-body">
						<h5 class="mt-0">burak guzelisik</h5>
						<p>Will you do the same for me? It's time to face the music I'm no longer your muse. Heard it's beautiful, be the judge and my girls gonna take a vote. I can feel a phoenix inside of me. Heaven is jealous of our love, angels are crying from up above. Yeah, you take me to utopia.</p>
						<div class="small text-end text-muted"><i class="fa fa-clock me-2"></i>20.04.2023</div>
					</div>
				</div>
				<div class="media">
					<img src="https://picsum.photos/id/5/64/64" class="me-3" alt="...">
					<div class="media-body">
						<h5 class="mt-0">burak guzelisik</h5>
						<p>Will you do the same for me? It's time to face the music I'm no longer your muse. Heard it's beautiful, be the judge and my girls gonna take a vote. I can feel a phoenix inside of me. Heaven is jealous of our love, angels are crying from up above. Yeah, you take me to utopia.</p>
						<div class="small text-end text-muted"><i class="fa fa-clock me-2"></i>20.04.2023</div>
					</div>
				</div>
				<div class="media mt-4">
					<div class="media-body">
						<form method="post">
							<div class="input-group ">
								<textarea class="form-control" placeholder="yorumunuz" rows="2"></textarea>
								<button class="btn btn-primary " type="submit"><i class="fa fa-send"></i>Gönder</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal"><i class="fa fa-times me-2"></i>Kapat</button>
			</div>
		</div>
	</div>
</div>